<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/gg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 第一行 -->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <RelativeLayout
            android:layout_width="205dp"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/qq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/qq_icon"
                tools:ignore="ImageContrastCheck"
                android:contentDescription="TODO"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/qq"
                android:layout_centerHorizontal="true"
                android:text="用QQ注册"
                android:textColor="#ffffff"
                android:textSize="25sp"></TextView>
        </RelativeLayout>
        <TextView android:layout_height="match_parent"
            android:layout_width="1dp"
            android:background="@color/white"></TextView>
        <RelativeLayout
            android:layout_width="205dp"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/weixin_icon"
                tools:ignore="ImageContrastCheck"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weixin"
                android:layout_centerHorizontal="true"
                android:text="用微信注册"
                android:textColor="#ffffff"
                android:textSize="25sp"></TextView>
        </RelativeLayout>

    </TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"></TextView>

    <!-- 第二行 -->
    <TableRow>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_span="3"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:src="@drawable/email_icon"
                tools:ignore="ImageContrastCheck"></ImageView>

            <TextView
                android:id="@+id/youxiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="8dp"
                android:text="使用电子邮箱注册"
                android:textColor="#ffffff"
                android:textSize="23dp"></TextView>
        </RelativeLayout>
    </TableRow>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"></TextView>

    <!-- 第三行 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:text="账号"
            android:textColor="#ffffff"
            android:textSize="25dp"></TextView>

        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/name"
            android:hint="请输入账号"
            android:textColor="@color/white"
            android:textColorHint="#ffffff"
            android:textSize="30dp" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"></TextView>

    <!-- 第四行 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/emil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:text="邮箱"
            android:textColor="#ffffff"
            android:textSize="25dp"></TextView>

        <EditText
            android:id="@+id/edit_emil"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/emil"
            android:hint="请输入邮箱"
            android:textColor="@color/white"
            android:textColorHint="#ffffff"
            android:textSize="30dp"
            android:autofillHints="" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"></TextView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:text="密码"
            android:textColor="#ffffff"
            android:textSize="25sp"></TextView>

        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/password"
            android:hint="********"
            android:password="true"
            android:textColor="@color/white"
            android:textColorHint="#212121" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"></TextView>

    <!-- 第六行 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/sex_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:text="性别"
            android:textColor="#ffffff"
            android:textSize="25dp"></TextView>
        <RadioGroup
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/sex_text"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <RadioButton
                android:id="@+id/Man"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:textColor="@color/white"
                android:textSize="30sp" />
            <RadioButton
                android:id="@+id/Woman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:text="女"
                android:checked="true"
                android:textColor="@color/white"
                android:textSize="30sp" />
        </RadioGroup>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"></TextView>

    <!-- 第七行 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/lover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="35dp"
            android:text="请选择兴趣爱好:"
            android:textColor="#ffffff"
            android:textSize="18sp"></TextView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/lover"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp">

            <CheckBox
                android:id="@+id/sing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="48dp"
                android:text="唱"
                android:textColor="@color/white"
                android:textSize="20sp" />
            <CheckBox
                android:id="@+id/dance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳"
                android:textSize="20sp"
                android:textColor="@color/white"/>

            <CheckBox
                android:id="@+id/read"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="rap"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"></TextView>

    <!-- 第八行 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="提交"
            android:background="#00000000"
            android:textSize="25sp"></Button>
    </LinearLayout>
</TableLayout>